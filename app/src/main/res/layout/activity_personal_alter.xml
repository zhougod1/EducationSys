<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_personal_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/my_background5"
    tools:context="edu.zcs.com.educationsys.activity.PersonalAlterActivity">

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:gravity="center_vertical">

        <TextView
            android:text="信息修改"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView17"
            android:layout_weight="0.04"
            android:layout_centerHorizontal="true"
            android:textColor="@color/window_background"
            android:textSize="18sp"
            android:layout_centerVertical="true"
            tools:textStyle="normal" />

        <TextView
            android:text="保存"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/personal_update"
            android:layout_weight="0.04"
            android:gravity="center"
            android:textColor="@color/window_background"
            android:textSize="16sp"
            android:layout_alignParentEnd="true"
            android:paddingRight="20dp"
            android:paddingLeft="20dp" />

        <TextView
            android:text="返回"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.04"
            android:gravity="center"
            android:textColor="@color/window_background"
            android:textSize="16sp"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:layout_alignParentStart="true"
            android:id="@+id/back" />

    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="@color/my_background2"
        android:layout_marginTop="10dp"
        android:layout_height="1sp"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentEnd="true"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:background="@drawable/list_bg">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:text="账号"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView31"
                android:layout_weight="3" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textPersonName"
                android:background="@null"
                android:ems="10"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:id="@+id/personal_alter_account"
                android:gravity="center_vertical"
                android:textSize="14sp"
                android:layout_weight="1"
                android:hint="你的账号" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/my_background2"
            android:layout_height="1sp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:text="性别"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView37"
                android:layout_weight="3" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textPersonName"
                android:gravity="center_vertical"
                android:background="@null"
                android:hint="你的性别"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:ems="10"
                android:id="@+id/personal_alter_sex"
                android:layout_weight="1" />

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:background="@color/my_background2"

            android:layout_height="1sp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:text="真实姓名"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView43"
                android:layout_weight="3" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textPersonName"
                android:hint="你的真实姓名"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:ems="10"
                android:textSize="14sp"
                android:background="@null"
                android:id="@+id/personal_alter_name"
                android:layout_weight="1" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="@color/my_background2"
        android:layout_marginTop="15dp"
        android:layout_height="1sp"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@drawable/list_bg">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:text="联系电话"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView44"
                android:layout_weight="3" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textPersonName"
                android:background="@null"
                android:hint="联系电话"
                android:textSize="14sp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:ems="10"
                android:id="@+id/personal_alter_phone"
                android:layout_weight="1" />

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:background="@color/my_background2"
            android:layout_height="1sp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:text="居住地址"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView45"
                android:layout_weight="3" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textPersonName"
                android:background="@null"
                android:ems="10"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:hint="你现在的居住地址"
                android:textSize="14sp"
                android:id="@+id/personal_alter_addres"
                android:layout_weight="1" />

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:background="@color/my_background2"
            android:layout_height="1sp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:text="所在地区"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView46"
                android:layout_weight="3" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:ems="10"
                android:hint="居住地址所在区"
                android:textSize="14sp"
                android:id="@+id/personal_alter_area"
                android:layout_weight="1"
                android:gravity="center_vertical" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
