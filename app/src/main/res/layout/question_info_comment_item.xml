<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:orientation="vertical"
    android:background="@color/window_background">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <edu.zcs.com.educationsys.util.view.CircleImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/erro"
            app:border_width="2dp"
            app:border_color="@color/window_background"
            android:id="@+id/comment_account_img"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="测试员"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/comment_account_account"
                android:textSize="17dp"
                android:textAppearance="@style/TextAppearance.AppCompat" />

            <TextView
                android:text="2017-1-8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/comment_time" />
        </LinearLayout>


    </LinearLayout>

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/comment_context"
        android:paddingLeft="40dp" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginLeft="40dp"
        android:background="@color/my_background2"
        android:layout_height="1sp"/>
</LinearLayout>
