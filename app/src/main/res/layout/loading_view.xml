<?xml version="1.0" encoding="utf-8"?>
<edu.zcs.com.educationsys.util.view.LoadingView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/window_background"
    android:visibility="visible">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true">

        <edu.zcs.com.educationsys.util.view.ConvertBallLoading
            android:layout_width="120dp"
            android:layout_height="120dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="努力加载中..."
            android:textColor="#aeaeae" />
    </LinearLayout>
</edu.zcs.com.educationsys.util.view.LoadingView>
