<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_transparent"
    android:gravity="center_vertical|center_horizontal">
<android.support.v7.widget.CardView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="3dp"
    android:id="@+id/release_order_layout">

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="500dp"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:paddingBottom="10dp"
            android:background="@color/colorPrimaryDark">

            <TextView
                android:text="提交请求"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView22"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:singleLine="false"
                android:textSize="15sp"
                android:textColor="@color/window_background" />

            <TextView
                android:text="X"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:id="@+id/order_release_canel" />
        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:background="@color/my_background2"
            android:layout_height="1sp">

        </LinearLayout>

        <ScrollView
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="40dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="500dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:text="兼职详情"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView57"
                        android:layout_weight="1"
                        android:textColor="@color/button_material_dark"
                        android:paddingBottom="6dp"
                        android:paddingLeft="6dp"
                        android:paddingTop="6dp"
                        android:background="@color/background_material_light" />
                </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:background="@color/my_background2"
                android:layout_height="1sp"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:text="标题："
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView29"
                            android:layout_weight="1.2" />

                        <TextView
                            android:text="诚聘已一高中数学家教老师！"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/order_release_title"
                            android:layout_weight="4" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:text="科目："
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView47"
                            android:layout_weight="1.2" />

                        <TextView
                            android:text="高中数学"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/order_release_coures"
                            android:layout_weight="4" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:text="地区："
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView48"
                            android:layout_weight="1.2" />

                        <TextView
                            android:text="厦门"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/order_release_area"
                            android:layout_weight="4" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:text="住址："
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView49"
                            android:layout_weight="1.2" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/order_release_address"
                            android:layout_weight="4"
                            android:text="将军祠杨虹新城501" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:text="联系人："
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView52"
                            android:layout_weight="1.2" />

                        <TextView
                            android:text="陈先生"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/order_release_name"
                            android:layout_weight="4" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:text="电话："
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView50"
                            android:layout_weight="1.2" />

                        <TextView
                            android:text="13356891234"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/order_release_phone"
                            android:layout_weight="4" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:text="部分说明"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView59"
                        android:layout_weight="1"
                        android:paddingBottom="6dp"
                        android:paddingLeft="6dp"
                        android:paddingTop="6dp"
                        android:textColor="@color/button_material_dark"
                        android:background="@color/background_material_light" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:background="@color/my_background2"
                    android:layout_height="1sp"/>
                <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp">

                    <TextView
                        android:text="在访问百田网站时请注意地址栏域名是否为“100bt”； 请不要使用外挂，不仅会增加账号风险更会被官方封号； 收到中奖信息时请注意是否是官方邮件；"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/order_release_info"
                        android:layout_weight="1" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:text="给他留言"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView60"
                        android:layout_weight="1"
                        android:paddingBottom="6dp"
                        android:paddingLeft="6dp"
                        android:paddingTop="6dp"
                        android:textColor="@color/button_material_dark"
                        android:background="@color/background_material_light" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:background="@color/my_background2"
                    android:layout_height="1sp"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:id="@+id/order_release_message"
                        android:layout_weight="1"
                        android:paddingLeft="20dp"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:hint="写下你想说的话..."
                        android:textSize="14sp"
                        android:background="@null"
                        android:paddingRight="20dp"
                        android:inputType="textMultiLine" />
                </LinearLayout>
            </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:background="@color/my_background2"
            android:layout_height="1sp"
            android:layout_marginTop="-40dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <LinearLayout
                android:text="4563054"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:paddingBottom="10dp">

                <TextView
                    android:text="￥89"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/order_release_pay"
                    android:gravity="left"
                    android:textColor="@color/my_color_red" />

                <TextView
                    android:text="/小时"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/order_release_time"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:paddingLeft="4dp" />

                <TextView
                    android:text="日结"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/order_release_cycle"
                    android:layout_weight="1"
                    android:gravity="center_horizontal" />

            </LinearLayout>

            <TextView
                android:text="提交"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/order_release_submit"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:background="@android:color/holo_orange_light"
                android:textSize="16sp"
                android:textColor="@color/window_background" />

        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>
</RelativeLayout>
